#!/usr/bin/env bash

usage() {
  set +x
  echo "usage: bootstrap.bash
    --repodir  <repodir>
    --peerlist <peerlist>
    [-h | --help]"
}

while [ "$1" != "" ]; do
    case $1 in
        --repodir )             shift
                                repodir="$1"
                                ;;
        --peerlist )            shift
                                peerlist="$1"
                                ;;
        -h | --help )           usage
                                exit
                                ;;
        -- )                    shift
                                break
                                ;;
        * )                     usage
                                exit 1
    esac
    shift
done

REPODIR="${repodir:-"$FIL_PATH"}"
PEERLIST="${peerlist:-""}"

localpeerid=""

while [ -z "$localpeerid" ]; do
  sleep 5
  localpeerid=$(/usr/local/bin/gfc --repodir="${REPODIR}" id | jq -r '.ID')
done

for peer in $(cat ${PEERLIST}); do
  if [[ "$peer" =~ "$localpeerid" ]]; then
    continue
  fi

  /usr/local/bin/gfc --repodir="${REPODIR}" swarm connect "$peer"
done

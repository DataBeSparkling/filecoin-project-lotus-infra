server {
    server_name {{ drand_public_host }};
    listen 443 ssl http2;

    ssl_certificate /etc/letsencrypt/live/{{ drand_public_host }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ drand_public_host }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;


    location / {
      grpc_pass grpc://{{ drand_host }}:{{ drand_port }};
    }

    location /api/ {
      proxy_pass http://{{ drand_host }}:{{ drand_port }};
      proxy_set_header Host $host;
    }
}

server {
    server_name {{ drand_public_host }};
    listen 80 http2;

    location / {
        return 301 https://$host$request_uri;
    }
} 

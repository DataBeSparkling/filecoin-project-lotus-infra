server {
    listen 80;

    server_name = {{ lotus_fountain_server_name }};

    location / {
        proxy_pass http://127.0.0.1:7777/;
        proxy_set_header            X-Real-IP $remote_addr;
        proxy_connect_timeout       900;
        proxy_send_timeout          900;
        proxy_read_timeout          900;
        send_timeout                900;
    }
}
